<script src="js/classie.js"></script> <!-- Libreria  -->
<script src="js/overlay.js"></script> <!-- Ventana full -->
<script src="js/selectFx.js"></script> <!-- Select -->
<script src="js/stepsForm.js"></script> <!-- formulario paso a paso -->

<script>
// Da forma al SELECT
(function() {
	[].slice.call( document.querySelectorAll( 'select.cs-select' ) ).forEach( function(el) {	
		new SelectFx(el);
		
	} );
})();


// Para enviar el formulario de registro
var theForm = document.getElementById( 'theForm' );

new stepsForm( theForm, {
	onSubmit : function( form ) {
	
	var formData = $('#theForm').serializeArray(); // hide form

	classie.addClass( theForm.querySelector( '.simform-inner' ), 'hide' );
	classie.removeClass( theForm.querySelector( '.volver' ), 'show' );
	classie.addClass( theForm.querySelector( '.volver' ), 'hide' );

      $.ajax({
        url:'registro',
        method:'post',
        datatype: 'json',
        data: formData,
        success:function(data){
        	if(data.success==true){
        		alert('ok todo enaviado')
        		return false
        	}
        	else{
        		alert('Error');
        		return false

        	}
          console.log('data:'+data);

        },
        error:function(){}

      }); // FIN AJAX

		var messageEl = theForm.querySelector('.final-message');
		messageEl.innerHTML = 'Thank you! We\'ll be in touch.';
		classie.addClass( messageEl, 'show' );
	}
});

// Imagenes randon de fondo
$(function() {
	
	var totalCount = 2;
	var num = Math.ceil( Math.random() * totalCount );

    $('body').css({
    	'background-image': 'url(images/bg/' + num+'.jpg)',
    	'background-repeat': 'no-repeat',
    	'background-attachment': 'fixed',
    	'background-position': 'center'
    });
    totalCount--;
});
</script>

