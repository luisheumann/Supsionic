<script>

$( document ).ready(function() {

	$("#transporte1").click(function(event) {

		$("#post_transporte1").addClass('activo_check').siblings().removeClass('activo_check');
		var imagen = $('#img_trans1').attr('src');
		var titulo = $(".titulo_transporte1").text();
		$(".espacio_transporte").empty();

		$('.espacio_transporte').attr('data-ckeck', true);

	    $('.espacio_transporte').append(('<img src=" '+imagen+' "> <div class="contenido_producto"><span class="tpc"> '+titulo+' </span><br><span>Transportador</span></div>'));	
	    $('.boton_conectar').show('last');

	});

	$("#transporte2").click(function(event) {

		$("#post_transporte2").addClass('activo_check').siblings().removeClass('activo_check');
		var imagen = $('#img_trans2').attr('src');
		var titulo = $(".titulo_transporte2").text();
		$(".espacio_transporte").empty();

		$('.espacio_transporte').attr('data-ckeck', true);

		$(".espacio_transporte").addClass('checkiado_trans');
	    $('.espacio_transporte').append(('<img src=" '+imagen+' "> <div class="contenido_producto"><span class="tpc"> '+titulo+' </span><br><span>Transportador</span></div>'));	
	    $('.boton_conectar').show('last');
	});

	$("#transporte3").click(function(event) {

		$("#post_transporte3").addClass('activo_check').siblings().removeClass('activo_check');
		var imagen = $('#img_trans3').attr('src');
		var titulo = $(".titulo_transporte3").text();
		$(".espacio_transporte").empty();

		$('.espacio_transporte').attr('data-ckeck', true);

	    $('.espacio_transporte').append(('<img src=" '+imagen+' "> <div class="contenido_producto"><span class="tpc"> '+titulo+' </span><br><span>Transportador</span></div>'));	
	    $('.boton_conectar').show('last');
	});	

	$("#transporte4").click(function(event) {

		$("#post_transporte4").addClass('activo_check').siblings().removeClass('activo_check');
		var imagen = $('#img_trans4').attr('src');
		var titulo = $(".titulo_transporte4").text();
		$(".espacio_transporte").empty();

		$('.espacio_transporte').attr('data-ckeck', true);

	    $('.espacio_transporte').append(('<img src=" '+imagen+' "> <div class="contenido_producto"><span class="tpc"> '+titulo+' </span><br><span>Transportador</span></div>'));	
	    $('.boton_conectar').show('last');
	});

	$("#transporte5").click(function(event) {

		$("#post_transporte5").addClass('activo_check').siblings().removeClass('activo_check');
		var imagen = $('#img_trans5').attr('src');
		var titulo = $(".titulo_transporte5").text();
		$(".espacio_transporte").empty();

		$('.espacio_transporte').attr('data-ckeck', true);

	    $('.espacio_transporte').append(('<img src=" '+imagen+' "> <div class="contenido_producto"><span class="tpc"> '+titulo+' </span><br><span>Transportador</span></div>'));	
	    $('.boton_conectar').show('last');
	});		

}); // fin ready		
</script>


